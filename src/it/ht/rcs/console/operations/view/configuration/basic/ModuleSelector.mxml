<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:mx="library://ns.adobe.com/flex/mx"
                   xmlns:srilabs="com.srilabs.*"
                   width="100%" borderColor="#aaaaaa" cornerRadius="5">
  
  <fx:Script>
    <![CDATA[
      [Bindable]
      public var text:String;
      
      protected function icheckbox1_clickHandler(event:MouseEvent):void
      {
        // TODO Auto-generated method stub
        dispatchEvent(new Event('prova', true, true));
      }
    ]]>
  </fx:Script>
  
  <s:Rect width="100%" height="80" radiusX="5" radiusY="5">
    <s:fill>
      <s:LinearGradient rotation="90">
        <s:entries>
          <s:GradientEntry color="#f5f5f5"/>
          <s:GradientEntry color="#d5d5d5"/>
        </s:entries>
      </s:LinearGradient>
    </s:fill>
  </s:Rect>
  
  <s:HGroup width="100%" height="100%" paddingLeft="30" paddingRight="30" verticalAlign="middle">
    <s:Label fontSize="18" fontStyle="italic" fontWeight="bold" text="{text}"/>
    <s:Spacer width="100%"/>
    <srilabs:iCheckBox width="110" height="28" text1="ON" text2="OFF" click="icheckbox1_clickHandler(event)"/>
  </s:HGroup>
  
</s:BorderContainer>