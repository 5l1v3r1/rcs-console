<?xml version="1.0" encoding="utf-8"?>
<modules:ModuleForm xmlns:fx="http://ns.adobe.com/mxml/2009"
                    xmlns:s="library://ns.adobe.com/flex/spark"
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    xmlns:modules="it.ht.rcs.console.operations.view.configuration.advanced.forms.modules.*"
                    creationComplete="init()" save="save()" title="Url">
  
  <fx:Script>
    <![CDATA[
      private function init():void
      {
        page.selected = module.page;
      }
      
      private function save():void
      {
        module.page = page.selected;
        close();
      }
    ]]>
  </fx:Script>

  <s:Form defaultButton="{saveButton}">
    
    <s:FormItem label="Take a screenshot of the page">
      <s:CheckBox id="page"/>
    </s:FormItem>
    
  </s:Form>

</modules:ModuleForm>