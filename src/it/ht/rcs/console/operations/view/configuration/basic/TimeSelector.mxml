<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:mx="library://ns.adobe.com/flex/mx"
                   xmlns:srilabs="com.srilabs.*"
                   width="100%" borderColor="#aaaaaa" cornerRadius="5">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.network.controller.CollectorManager;
      
      [Bindable]
      public var text:String;
      
      protected function icheckbox1_clickHandler(event:MouseEvent):void
      {
        currentState = selector.selected ? 'online' : 'offline';
      }
    ]]>
  </fx:Script>

  <s:states>
    <s:State name="offline"/>
    <s:State name="online"/>
  </s:states>
  
  <s:Rect width="100%" height="100%" radiusX="5" radiusY="5">
    <s:fill>
      <s:LinearGradient rotation="90">
        <s:entries>
          <s:GradientEntry color="#f5f5f5"/>
          <s:GradientEntry color="#d5d5d5"/>
        </s:entries>
      </s:LinearGradient>
    </s:fill>
  </s:Rect>
  
  <s:VGroup width="100%" height="100%" gap="-30" paddingLeft="30" paddingRight="30"
            verticalAlign="middle">
  
    <s:HGroup width="100%" height="80" verticalAlign="middle">
      <s:Label fontSize="18" fontStyle="italic" fontWeight="bold" text="{text}"/>
      <s:Spacer width="100%"/>
      <srilabs:iCheckBox id="selector" width="110" height="28" click="icheckbox1_clickHandler(event)"
                         text1="ON" text2="OFF"/>
    </s:HGroup>
    
    <s:HGroup width="100%" height="80" verticalAlign="middle"
              visible.offline="false" includeInLayout.offline="false">
      <s:Label fontSize="18" fontStyle="italic" fontWeight="bold" text="Sync every"/>
      <s:Spacer width="4"/>
      
      <s:TextInput id="minutes" height="28" fontSize="18" fontStyle="italic" fontWeight="bold"
                   maxChars="3" restrict="0-9" text="10" textAlign="center" widthInChars="3"/>
      
      <s:Spacer width="4"/>
      <s:Label fontSize="18" fontStyle="italic" fontWeight="bold" text="minutes on"/>
      
      <s:Spacer width="2"/>
      <s:DropDownList width="100%" height="28"
                      dataProvider="{CollectorManager.instance.getEntryPointsView()}" fontSize="14"
                      labelField="address" requireSelection="true"/>
    </s:HGroup>
    
  </s:VGroup>
  
</s:BorderContainer>