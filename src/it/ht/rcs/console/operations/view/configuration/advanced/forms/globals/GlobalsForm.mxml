<?xml version="1.0" encoding="utf-8"?>
<utils:TitleWindowSaveCancel xmlns:fx="http://ns.adobe.com/mxml/2009"
                             xmlns:s="library://ns.adobe.com/flex/spark"
                             xmlns:mx="library://ns.adobe.com/flex/mx"
                             xmlns:utils="it.ht.rcs.console.utils.*"
                             creationComplete="init()" save="save()">
  
  <fx:Script>
    <![CDATA[
      public var globals:Object;

      private function init():void
      {
        min.text = (globals.quota.min / 1000) as String;
        max.text = (globals.quota.max / 1000) as String;
        wipe.selected = globals.wipe;
        driver.selected = globals.remove_driver;
      }
      
      private function save():void
      {
        globals.quota.min = parseInt(min.text) * 1000;
        globals.quota.max = parseInt(max.text) * 1000;
        globals.wipe = wipe.selected;
        globals.remove_driver = driver.selected;
        close();
      }
    ]]>
  </fx:Script>
  
  <s:Form defaultButton="{saveButton}">
    
    <s:FormItem label="Quota Min">
      <s:HGroup verticalAlign="middle">
        <s:TextInput id="max" maxChars="3" restrict="0-9" textAlign="center" widthInChars="3"/>
        <s:Label paddingTop="1" text=" MB"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Quota Max">
      <s:HGroup verticalAlign="middle">
        <s:TextInput id="min" maxChars="4" restrict="0-9" textAlign="center" widthInChars="3"/>
        <s:Label paddingTop="1" text=" MB"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Wipe">
      <s:CheckBox id="wipe"/>
    </s:FormItem>
    
    <s:FormItem label="Remove Driver">
      <s:CheckBox id="driver"/>
    </s:FormItem>
    
  </s:Form>
  
</utils:TitleWindowSaveCancel>