<?xml version="1.0" encoding="utf-8"?>
<utils:TitleWindowSaveCancel xmlns:fx="http://ns.adobe.com/mxml/2009"
                             xmlns:s="library://ns.adobe.com/flex/spark"
                             xmlns:mx="library://ns.adobe.com/flex/mx"
                             xmlns:utils="it.ht.rcs.console.utils.*"
                             creationComplete="init()" save="save()">
  
  <fx:Script>
    <![CDATA[
      import mx.collections.ArrayList;
      
      public var globals:Object;

      private function init():void
      {
        nohide.dataProvider = new ArrayList(globals.nohide);
        
        min.text = String(globals.quota.min / 1000000);
        max.text = String(globals.quota.max / 1000000);
        wipe.selected = globals.wipe;
        driver.selected = globals.remove_driver;
      }
      
      private function save():void
      {
        if (min.text.length == 0) min.text = '0';
        globals.quota.min = parseInt(min.text) * 1000000;
        if (max.text.length == 0) max.text = '0';
        globals.quota.max = parseInt(max.text) * 1000000;
        globals.wipe = wipe.selected;
        globals.remove_driver = driver.selected;
        globals.nohide = ArrayList(nohide.dataProvider).source;;
        close();
      }
      
      private function addNoHide(event:MouseEvent):void
      {
        nohide.dataProvider.addItem(nohideMask.text);
        nohideMask.text = '';
        nohideMask.setFocus();
      }
      private function removeNoHide(event:MouseEvent):void
      {
        nohide.dataProvider.removeItemAt(nohide.selectedIndex);
      }
    ]]>
  </fx:Script>
  
  <s:Form defaultButton="{saveButton}">
    
    <s:FormItem label="Minimum disk free">
      <s:HGroup verticalAlign="middle">
        <s:TextInput id="min" restrict="0-9" textAlign="center" widthInChars="6"/>
        <s:Label paddingTop="1" text=" MB"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Maximum evidence size">
      <s:HGroup verticalAlign="middle">
        <s:TextInput id="max" restrict="0-9" textAlign="center" widthInChars="6"/>
        <s:Label paddingTop="1" text=" MB"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Wipe">
      <s:CheckBox id="wipe"/>
    </s:FormItem>
    
    <s:FormItem label="Remove Driver">
      <s:CheckBox id="driver"/>
    </s:FormItem>
    
    <s:FormItem label="No Hide">
      <s:HGroup>
        <s:List id="nohide" width="150" height="156"/>
        <s:Button width="40" label="-" click="removeNoHide(event)" enabled="{nohide.selectedItem}"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Mask">
      <s:HGroup>
        <s:TextInput id="nohideMask" width="150"/>
        <s:Button width="40" label="+" click="addNoHide(event)" enabled="{nohideMask.text != ''}"/>
      </s:HGroup>
    </s:FormItem>
    
  </s:Form>
  
</utils:TitleWindowSaveCancel>