<?xml version="1.0" encoding="utf-8"?>
<modules:ModuleForm xmlns:fx="http://ns.adobe.com/mxml/2009"
                    xmlns:s="library://ns.adobe.com/flex/spark"
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    xmlns:modules="it.ht.rcs.console.operations.view.configuration.advanced.forms.modules.*"
                    creationComplete="init()" save="save()" title="Screenshot">
  
  <fx:Script>
    <![CDATA[
      private function init():void
      {
        seconds.text = module.seconds;
        creation.selected = module.creation;
        foreground.selected = module.foreground;
      }
      
      private function save():void
      {
        module.seconds = seconds.text;
        module.creation = creation.selected;
        module.foreground = foreground.selected;
        close();
      }
    ]]>
  </fx:Script>

  <s:Form defaultButton="{saveButton}">
    
    <s:FormItem label="Take an image every">
      <s:HGroup verticalAlign="middle">
        <s:TextInput id="seconds" restrict="0-9" textAlign="center" widthInChars="3"/>
        <s:Label paddingTop="1" text=" seconds"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Take an image on window creation">
      <s:CheckBox id="creation"/>
    </s:FormItem>
    
    <s:FormItem label="Take only foreground window">
      <s:CheckBox id="foreground"/>
    </s:FormItem>
    
  </s:Form>

</modules:ModuleForm>