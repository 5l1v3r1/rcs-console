<?xml version="1.0" encoding="utf-8"?>
<utils:TitleWindowSaveCancel xmlns:fx="http://ns.adobe.com/mxml/2009"
                             xmlns:s="library://ns.adobe.com/flex/spark"
                             xmlns:mx="library://ns.adobe.com/flex/mx"
                             xmlns:utils="it.ht.rcs.console.utils.*"
                             title="Screenshot">

  <s:Form defaultButton="{saveButton}">
    
    <s:FormItem label="Take an image every">
      <s:HGroup verticalAlign="middle">
        <s:TextInput restrict="0-9" textAlign="center" widthInChars="3"/>
        <s:Label paddingTop="1" text=" seconds"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Take an image on window creation">
      <s:CheckBox/>
    </s:FormItem>
    
    <s:FormItem label="Take only foreground window">
      <s:CheckBox/>
    </s:FormItem>
    
  </s:Form>

</utils:TitleWindowSaveCancel>