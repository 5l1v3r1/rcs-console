<?xml version="1.0" encoding="utf-8"?>
<modules:ModuleForm xmlns:fx="http://ns.adobe.com/mxml/2009"
                    xmlns:s="library://ns.adobe.com/flex/spark"
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    xmlns:modules="it.ht.rcs.console.operations.view.configuration.advanced.forms.modules.*"
                    creationComplete="init()" save="save()" title="Screenshot">
  
  <fx:Script>
    <![CDATA[
      private function init():void
      {
        quality.value = module.quality;
        foreground.selected = module.foreground;
      }
      
      private function save():void
      {
        module.quality = quality.value;
        module.foreground = foreground.selected;
        close();
      }
      
      private function dataTipFunction(value:Number):String
      {
        switch (value) {
          case 0 : return 'Low';
          case 1 : return 'Medium';
          case 2 : return 'High';
          default: return '';
        }
      }
    ]]>
  </fx:Script>

  <s:Form defaultButton="{saveButton}">
    
    <s:FormItem label="Quality">
      <s:HSlider id="quality" width="150" dataTipFormatFunction="dataTipFunction" maximum="2"
                 minimum="0" snapInterval="1" stepSize="1"/>
    </s:FormItem>
    
    <s:FormItem label="Take only foreground window">
      <s:CheckBox id="foreground"/>
    </s:FormItem>
    
  </s:Form>

</modules:ModuleForm>