<?xml version="1.0" encoding="utf-8"?>
<events:EventFields xmlns:fx="http://ns.adobe.com/mxml/2009"
                    xmlns:s="library://ns.adobe.com/flex/spark"
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    xmlns:events="it.ht.rcs.console.operations.view.configuration.advanced.forms.events.*"
                    xmlns:utils="it.ht.rcs.console.utils.*"
                    creationComplete="init()">
  
  <fx:Script>
    <![CDATA[
      private function init():void
      {
        min.text = event.min || '0';
        max.text = event.max || '30';
      }
      
      override public function commit():void
      {
        event.min = parseInt(min.text);
        event.max = parseInt(max.text);
      }
      
      override public function isValid():Boolean
      {
        return val.isValid();
      }
    ]]>
  </fx:Script>
  
  <s:Label width="280" text="The start action is triggered when..."/>
  
  <s:Form>
  
    <s:FormItem label="Min">
      <s:HGroup verticalAlign="middle">
        <s:TextInput id="min" maxChars="3" restrict="0-9" textAlign="center" widthInChars="3"/>
        <s:Label paddingTop="1" text=" %"/>
      </s:HGroup>
    </s:FormItem>
    
    <s:FormItem label="Max">
      <s:HGroup verticalAlign="middle">
        <s:TextInput id="max" maxChars="3" restrict="0-9" textAlign="center" widthInChars="3"/>
        <s:Label paddingTop="1" text=" %"/>
      </s:HGroup>
    </s:FormItem>
  
  </s:Form>
  
  <fx:Declarations>
    <fx:Array id="vals">
      <mx:NumberValidator exceedsMaxError="Value must not be more than 100" maxValue="100"
                          property="text" required="true" source="{min}" triggerEvent=""/>
      <mx:NumberValidator exceedsMaxError="Value must not be more than 100"
                          lowerThanMinError="Value must be more than 'Min'" maxValue="100"
                          minValue="{parseInt(min.text) + 1}" property="text" source="{max}"
                          triggerEvent=""/>
    </fx:Array>
    <utils:MetaValidator id="val" validators="{vals}"/>
  </fx:Declarations>
  
</events:EventFields>