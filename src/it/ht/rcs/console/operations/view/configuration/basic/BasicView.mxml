<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:actionbar="it.ht.rcs.console.main.actionbar.*"
         xmlns:configuration="it.ht.rcs.console.operations.view.configuration.*"
         xmlns:basic="it.ht.rcs.console.operations.view.configuration.basic.*"
         width="100%" height="100%" addedToStage="onAddedToStage(event)">


  <s:layout>
    <s:VerticalLayout gap="5"/>
  </s:layout>
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.operations.view.OperationsSection;
      import it.ht.rcs.console.x.toDelete.PlaygroundSection;
      
      [Bindable]
      public var section:PlaygroundSection;
      
      private function onAddedToStage(event:Event):void
      {
        //section.stateManager.selectedConfig;
        addEventListener('prova', asd);
      }
      
      private function asd(event:Event):void
      {
        section.isDirty = true;
      }
    ]]>
  </fx:Script>
  
  <configuration:ConfigurationActionBar/>
  
  <s:VGroup width="100%" height="100%" gap="30" paddingLeft="100" paddingRight="100" paddingTop="30" paddingBottom="30">
    
    <s:HGroup width="100%" gap="0" horizontalAlign="right">
      <s:Button label="Go to advanced..."/>
    </s:HGroup>
    
    <s:HGroup width="100%" gap="30">
      <basic:ModuleSelector id="calls" text="Calls (Skype, MSN)"/>
      <basic:ModuleSelector id="contacts" text="Contacts &amp; Calendar"/>
    </s:HGroup>
    
    <s:HGroup width="100%" gap="30">
      <basic:ModuleSelector id="messages" text="Messages (Mail, SMS, Chat)"/>
      <basic:ModuleSelector id="website" text="Websites &amp; URLs"/>
    </s:HGroup>
    
    <s:HGroup width="100%" gap="30">
      <basic:ModuleSelector id="documents" text="Documents"/>
      <basic:ModuleSelector id="screenshot" text="Screenshots &amp; Mouse"/>
    </s:HGroup>
    
    <s:HGroup width="100%" gap="30">
      <basic:ModuleSelector id="location" text="Location"/>
      <basic:TimeSelector id="time" text="Online Sync"/>
    </s:HGroup>
    
  </s:VGroup>

</s:Group>