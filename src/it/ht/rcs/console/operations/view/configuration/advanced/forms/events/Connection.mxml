<?xml version="1.0" encoding="utf-8"?>
<s:Form xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/mx">
  
  <s:Label text="The action is triggered when the machine makes a connection to the specified address"/>
  
  <s:FormItem label="IP Address">
    <s:TextInput maxChars="15" restrict="0-9." text="0.0.0.0" widthInChars="8"/>
  </s:FormItem>
  
  <s:FormItem label="Netmask">
    <s:TextInput maxChars="15" restrict="0-9." text="255.255.255.255" widthInChars="8"/>
  </s:FormItem>
  
  <s:FormItem label="Port">
    <s:TextInput maxChars="5" restrict="0-9" widthInChars="3"/>
  </s:FormItem>

</s:Form>