<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:mx="library://ns.adobe.com/flex/mx"
                   xmlns:srilabs="com.srilabs.*"
                   width="100%" borderColor="#aaaaaa" cornerRadius="5" creationPolicy="all">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.network.controller.CollectorManager;
      
      public function set selected(s:Boolean):void
      {
        check.selected = s;
        options.visible = options.includeInLayout = check.selected;
      }
      
      private function onSwitch(event:MouseEvent):void
      {
        options.visible = options.includeInLayout = check.selected;
        dispatchEvent(new Event('switch', true, true));
      }
    ]]>
  </fx:Script>
  
  <s:Rect width="100%" height="100" radiusX="5" radiusY="5">
    <s:fill>
      <s:LinearGradient rotation="90">
        <s:entries>
          <s:GradientEntry color="#f5f5f5"/>
          <s:GradientEntry color="#d5d5d5"/>
        </s:entries>
      </s:LinearGradient>
    </s:fill>
  </s:Rect>
  
  <srilabs:iCheckBox id="check" right="15" top="15" width="110" height="28" animated="false"
                     click="onSwitch(event)" text1="ON" text2="OFF"/>
  
  <s:Label left="15" top="15" height="28" fontFamily="Myriad" fontSize="18" fontWeight="bold"
           text="Online Synchronization" verticalAlign="middle"/>
  
  <s:HGroup id="options" top="50" width="100%" height="40" hideEffect="{fadeOut}" paddingLeft="15"
            showEffect="{fadeIn}" verticalAlign="middle">
    <s:Label fontFamily="Myriad" fontSize="17" text="Every"/>
    <s:Spacer width="4"/>
    
    <s:TextInput id="minutes" height="28" fontFamily="Myriad" fontSize="17" maxChars="3"
                 restrict="0-9" text="10" textAlign="center" widthInChars="3"/>
    
    <s:Spacer width="4"/>
    <s:Label fontFamily="Myriad" fontSize="17" text="minutes on"/>
    
    <s:Spacer width="2"/>
    <s:ComboBox width="150" height="28"
                dataProvider="{CollectorManager.instance.getEntryPointsView()}" fontFamily="Myriad"
                fontSize="14" labelField="address" requireSelection="true"/>
  </s:HGroup>
  
  <s:Label visible="{!options.visible}" top="50" width="100%" height="40" fontFamily="Myriad"
           fontSize="17" hideEffect="{fadeOut}" includeInLayout="{!options.includeInLayout}"
           paddingLeft="15" showEffect="{fadeIn}" text="Will retrieve content offline"
           verticalAlign="middle"/>
  
  <fx:Declarations>
    <s:Fade id="fadeIn" alphaFrom="0" alphaTo="1" duration="100"/>
    <s:Fade id="fadeOut" alphaFrom="1" alphaTo="0" duration="100"/>
  </fx:Declarations>
  
</s:BorderContainer>