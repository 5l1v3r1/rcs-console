<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:utils="it.ht.rcs.console.utils.*"
         horizontalAlign="center"
         gap="1">
  
  <fx:Script>
    <![CDATA[
      
      private var _label:String;
      
      [Bindable]
      public var tag:int;
      
      [Bindable]
      public function set label(value:String):void
      {
         _label=value;
         labelDisplay.text=_label;
      }
 
      public function get label():String
      {
        return _label;
      }

    
      protected function onSliderChange(event:Event):void
      {
        dispatchEvent(new Event("tagChange"))
        
      }
      
    ]]>
  </fx:Script>
    <utils:TagImage value="{sliderTag.value}"/>   
    <s:HSlider id="sliderTag" width="30" maximum="4" minimum="0" value="{tag}"
               showDataTip="false" change="onSliderChange(event)"/>
  
    <s:Label id="labelDisplay"   textAlign="center"
             maxDisplayedLines="1" fontFamily="Myriad" fontSize="14"
             horizontalCenter="0" verticalCenter="1" verticalAlign="middle"
             left="10" right="10" top="2" bottom="2"/>
 
</s:VGroup>
