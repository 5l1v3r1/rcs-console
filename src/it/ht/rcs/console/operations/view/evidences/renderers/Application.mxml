<?xml version="1.0" encoding="utf-8"?>
<renderers:EvidenceDataRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                                xmlns:s="library://ns.adobe.com/flex/spark"
                                xmlns:mx="library://ns.adobe.com/flex/mx"
                                xmlns:renderers="it.ht.rcs.console.operations.view.evidences.renderers.*"
                                width="100%" height="100%"
                                >
	
	<fx:Script>
		<![CDATA[
      import it.ht.rcs.console.DB;
      import flashx.textLayout.conversion.TextConverter;
      
  		
      [Bindable]
      override public function set data(value:*):void
      {
        
        super.data=value;
        programTxt.textFlow= TextConverter.importToFlow("<i>Program: </i>"+data.data.program, TextConverter.TEXT_FIELD_HTML_FORMAT)
        actionTxt.textFlow= TextConverter.importToFlow("<i>Action: </i>"+data.data.action, TextConverter.TEXT_FIELD_HTML_FORMAT)
        descTxt.textFlow= TextConverter.importToFlow("<i>Description: </i>"+data.data.desc, TextConverter.TEXT_FIELD_HTML_FORMAT)
       
  		}
      
      private function init():void
      {
       
      }

		]]>
	</fx:Script>
  <s:VGroup verticalAlign="top"
            height="100%"
            width="100%">
    <s:HGroup verticalAlign="middle" width="100%">
      <s:RichText id="programTxt" width="50%"/>
      <s:RichText id="actionTxt" width="50%"/>
    </s:HGroup>
    <s:Line width="100%">
      <s:stroke>
        <s:SolidColorStroke color="0xCCCCCC"/>
      </s:stroke>
    </s:Line>
    <s:HGroup verticalAlign="middle" width="100%">
      <s:RichText id="descTxt" width="100%"/>
    </s:HGroup>
  </s:VGroup>
</renderers:EvidenceDataRenderer>
