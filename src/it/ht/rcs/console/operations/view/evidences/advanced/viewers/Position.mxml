<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
									 xmlns:s="library://ns.adobe.com/flex/spark"
									 xmlns:mx="library://ns.adobe.com/flex/mx"
                   xmlns:viewers="it.ht.rcs.console.operations.view.evidences.advanced.viewers.*"
									 height="100%"
									 width="100%"
                   borderColor="0xCCCCCC"
                   backgroundColor="0xCCCCCC"
                   backgroundAlpha="0.5" creationComplete="init()">
	<fx:Script>
		<![CDATA[
			import flashx.textLayout.conversion.TextConverter;


			private var _evidence:Object;

			[Bindable]
			public function set evidence(value:Object):void
			{
        _evidence=value;
        //type, address, latitude, longitude
				
			}

			public function get evidence():Object
			{
				return _evidence;
			}

			private function lineBreak(s:String):String
			{
				var result:String=s.replace(new RegExp("\n", "g"), "<br>");
				return result;
			}
      
      private function init():void
      {
        var pos1:Object={lat:45.4772345,lng:9.1868598, range:796} //Milano - Via Moscova
        var pos2:Object={lat:45.47855,lng:9.21355, range:300} //Milano - Via Plinio
        var pos3:Object={lat:45.46416,lng:9.19034, range:535} // Milano - Piazza Duomo
        
       var pos4:Object={lat:48.89364,lng:2.33739, range:100} // 3 citÃ© Nollez Paris France
        
        var positions:Array=[pos1,pos2,pos3]
        
        mapViewer.positions=positions;
      }
		]]>
	</fx:Script>
<s:layout>
  <s:HorizontalLayout paddingBottom="10"
                      paddingLeft="10"
                      paddingRight="10"
                      paddingTop="10"
                      />
</s:layout>
  <s:RichText id="typeTxt" width="100%" textFlow="{TextConverter.importToFlow('&lt;b&gt;Program: &lt;/b&gt;'+evidence.data.type, TextConverter.TEXT_FIELD_HTML_FORMAT)}" fontSize="15"/>
  <s:Line width="100%">
    <s:stroke>
      <s:SolidColorStroke color="0xCCCCCC"/>
    </s:stroke>
  </s:Line>
  <s:RichText id="addressTxt" width="100%" textFlow="{TextConverter.importToFlow('&lt;b&gt;Path: &lt;/b&gt;'+evidence.data.address, TextConverter.TEXT_FIELD_HTML_FORMAT)}" fontSize="15"/>
  <s:Line width="100%">
    <s:stroke>
      <s:SolidColorStroke color="0xCCCCCC"/>
    </s:stroke>
  </s:Line>
  <s:RichText id="coordsTxt" width="100%" textFlow="{TextConverter.importToFlow('&lt;b&gt;Lat: &lt;/b&gt;'+evidence.data.latitude, TextConverter.TEXT_FIELD_HTML_FORMAT)}" fontSize="15"/>
  <viewers:MapViewer id="mapViewer"/>
</s:BorderContainer>
