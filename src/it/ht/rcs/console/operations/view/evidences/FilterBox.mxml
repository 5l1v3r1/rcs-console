<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:mx="library://ns.adobe.com/flex/mx"
                   width="100%" backgroundAlpha="1" backgroundColor="#EFEFEF" borderColor="#CCCCCC"
                   borderWeight="1" cornerRadius="5">
  
  <s:layout>
    <s:HorizontalLayout paddingBottom="5" paddingLeft="10" paddingRight="10" paddingTop="5" verticalAlign="middle"/>
  </s:layout>
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.events.FilterEvent;
      import it.ht.rcs.console.evidence.controller.EvidenceManager;
      
      import locale.R;
      
      import mx.core.FlexGlobals;
      
      public var evidenceView:EvidencesView;
      
      private function onShowIdChange():void
      {
        evidenceView.evidenceDg.idVisible=showIdCh.selected;
      }
      
      
    ]]>
  </fx:Script>
  
  <s:CheckBox id="showIdCh" change="onShowIdChange()" label="{R.get('ID_COLUMN_SHOW')}"/>

</s:BorderContainer>