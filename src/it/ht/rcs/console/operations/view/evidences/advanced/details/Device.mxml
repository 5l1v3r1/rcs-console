<?xml version="1.0" encoding="utf-8"?>
<s:Form xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" 
        xmlns:mx="library://ns.adobe.com/flex/mx">
  <fx:Script>
    <![CDATA[
      import flashx.textLayout.conversion.TextConverter;
      
      [Bindable]
      public var data:Object;
      
      private function lineBreak(s:String):String
      {
        var result:String=s.replace(new RegExp("\n", "g"), "<br>");
        return result;
      }
      
    ]]>
  </fx:Script>

  <s:FormItem label="Content">
    <s:Scroller height="100%" width="200" >
      <s:RichEditableText editable="false" textFlow="{TextConverter.importToFlow(lineBreak(data.content), TextConverter.TEXT_FIELD_HTML_FORMAT)}"/>
    </s:Scroller>
  </s:FormItem>
 
</s:Form>
