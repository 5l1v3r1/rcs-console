<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
  
  <fx:Script>
    <![CDATA[
      protected function create(event:MouseEvent):void
      {
        var params:Object = {platform: 'applet', generate: {platforms: ['windows', 'osx'], binary: {demo: demo.selected, admin: false}, melt: {admin: false, appname: appname.text} } }
          
      }
    ]]>
  </fx:Script>
  
  <s:HGroup left="10" top="10" verticalAlign="middle">
    <s:Label fontWeight="bold" text="Application Name"/>    
    <s:TextInput id="appname" text="installer"/>
  </s:HGroup>
  
  <s:HGroup left="10" bottom="0" right="10" horizontalAlign="right">
    <s:CheckBox left="10" id="demo" label="Demo Mode" fontWeight="bold"/>
    <s:Button right="10" label="Create..." click="create(event)"/>    
  </s:HGroup>
  
</s:Group>
