<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
    
  <fx:Script>
    <![CDATA[
      
      public function set platform(value:*):void {
        if (value == 'blackberry' || value == 'winmo')
          currentState = value;
        else
          currentState = 'all';
      }
        
      protected function create(event:MouseEvent):void
      {
        var params:Object
        
        if (currentState == 'blackberry') {
          params = {platform: parentDocument.platform, binary: {demo: demo.selected}, melt: {}, 'package': {type: 'local'} };
        } else {
          params = {platform: 'card', generate: {platforms: ['winmo'], binary: {demo: demo.selected} } };
        }

      }
      
    ]]>
  </fx:Script>
  <s:states>
    <s:State name='all'/>
    <s:State name='blackberry'/>
    <s:State name='winmo'/>
  </s:states>
  
  <s:TextArea includeIn="blackberry" left="10" top="20" right="0" height="83" borderVisible="false"
              contentBackgroundAlpha="0.0" editable="false" text="You will need to connect the blackberry to the computer with an USB cable. Blackberry desktop must be installed on the computer. Then run the installer.bat from it."/>
    
  <s:TextArea includeIn="winmo" left="10" top="20" right="0" height="83" borderVisible="false"
              contentBackgroundAlpha="0.0" editable="false" text="Insert the card in the console machine before clicking on the 'create' button"/>

  <s:HGroup left="10" bottom="0" right="10" horizontalAlign="right">
    <s:CheckBox left="10" id="demo" label="Demo Mode" fontWeight="bold"/>
    <s:Button right="10" label="Create..." click="create(event)"/>    
  </s:HGroup>
  
</s:Group>
