<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
    
  <fx:Script>
    <![CDATA[
      
      public function set platform(value:*):void {
        if (value == 'blackberry' || value == 'winmo')
          currentState = value;
        else
          currentState = 'all';
      }
        
    ]]>
  </fx:Script>
  <s:states>
    <s:State name='all'/>
    <s:State name='blackberry'/>
    <s:State name='winmo'/>
  </s:states>
  
  <s:CheckBox left="10" top="10" id="demo" label="Demo Mode" fontWeight="bold"/>
  <s:TextArea left="25" top="25" width="280" height="42" borderVisible="false"
              contentBackgroundAlpha="0.0" editable="false"
              text="You can use the demo mode to try the agent in the lab, it will not consume a license."/>
  
  <s:TextArea includeIn="blackberry" left="10" top="80" right="0" height="83" borderVisible="false"
              contentBackgroundAlpha="0.0" editable="false" text="You will need to connect the blackberry to the computer with an USB cable. Blackberry desktop must be installed on the computer. Then run the installer.bat from it."/>
    
  <s:TextArea includeIn="winmo" left="10" top="80" right="0" height="83" borderVisible="false"
              contentBackgroundAlpha="0.0" editable="false" text="Insert the card in the console machine before clicking on the 'create' button"/>

  <s:Button right="20" bottom="20" label="Create..."/>
  
</s:Group>
