<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" xmlns:build="it.ht.rcs.console.operations.view.factories.build.*" >
  <fx:Script>
    <![CDATA[
      [Bindable]
      public var desc:String;
      [Bindable]
      public var platform:String;
    ]]>
  </fx:Script>
  <s:states>
    <s:State name="none"/>
    
    <s:State name="dsk_silent"/>
    <s:State name="dsk_melted"/>
    <s:State name="dsk_offline"/>
    <s:State name="dsk_U3"/>

    <s:State name="mob_local"/>
    <s:State name="mob_silent"/>
    <s:State name="mob_melted"/>
    <s:State name="mob_wap"/>

    <s:State name="exploit"/>
  </s:states>
  
    <s:TextArea left="0" right="0" top="0" height="50" borderVisible="false" contentBackgroundAlpha="0.0" editable="false" text="{desc}"/>
  
    <s:Group left="0" right="0" top="50" bottom="0">
      <build:DskSilent includeIn="dsk_silent"/>
      <build:DskMelted includeIn="dsk_melted"/>
      <build:DskOffline includeIn="dsk_offline"/>
      <build:DskU3 includeIn="dsk_U3"/>
      <build:MobLocal includeIn="mob_local" currentState="{platform}"/>
      <build:MobSilent includeIn="mob_silent" currentState="{platform}"/>
      <build:MobMelted includeIn="mob_melted"/>
      <build:MobWap includeIn="mob_wap" currentState="{platform}"/>
      <build:Exploit includeIn="exploit"/>    
    </s:Group>    
  
</s:SkinnableContainer>
