<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:info="it.ht.rcs.console.operations.view.info.*"
         width="100%" height="100%" addedToStage="onAddedToStage()"
         removedFromStage="onRemovedFromStage()">

  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.evidence.controller.EvidenceManager;
      import it.ht.rcs.console.operations.view.OperationsSection;
      
      import mx.rpc.events.ResultEvent;
      
      [Bindable]
      public var section:OperationsSection;
		
		
      
      private function onAddedToStage():void
      {
  		  var filter:Object={target:section.stateManager.selectedTarget._id, agent:section.stateManager.selectedAgent._id}
  		  EvidenceManager.instance.info(filter,onInfoResult)
       
      }
      private function onInfoResult(e:ResultEvent):void
      {
        trace(e.result)
      }
      
      private function onRemovedFromStage():void
      {
        
      }
      
      
    ]]>
  </fx:Script>


	<info:InfoGrid dataProvider="{EvidenceManager.instance._view}"/>
</s:VGroup>