<?xml version="1.0" encoding="utf-8"?>
<operations:BaseListRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                             xmlns:s="library://ns.adobe.com/flex/spark"
                             xmlns:mx="library://ns.adobe.com/flex/mx"
                             xmlns:operations="it.ht.rcs.console.operations.view.*">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.target.model.Target;
      
      [Embed(source="img/items/target_black.png")]
      private static const targetIcon:Class;
      
      override public function set data(value:Object):void
      {
        super.data = value;
        icon.source = targetIcon;
        alpha = (data as Target).status.toLocaleLowerCase() == 'open' ? 1 : .5;
      }
    ]]>
  </fx:Script>
  
</operations:BaseListRenderer>