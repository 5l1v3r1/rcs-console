<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx"
          xmlns:transfer="it.ht.rcs.console.operations.view.filetransfer.*"
          width="100%" height="100%" addedToStage="onAddedToStage()"
          removedFromStage="onRemovedFromStage()">

  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.agent.controller.AgentManager;
      import it.ht.rcs.console.operations.view.OperationsSection;
      
      import mx.rpc.events.ResultEvent;
      
      [Bindable]
      public var section:OperationsSection;
      
      private function onAddedToStage():void
      {
        AgentManager.instance.getDownloads(section.stateManager.selectedAgent._id, onDownloadsResult);
      }
      
      private function onDownloadsResult(e:ResultEvent):void
      {
        trace('ok');
      }

      private function onRemovedFromStage():void
      {
      }
    ]]>
  </fx:Script>
  
  <transfer:UploadActionBar selectedObject="{uploads.selectedItem}"/>
  
  <transfer:UploadGrid id="uploads"/>
  
  <transfer:DownloadActionBar selectedObject="{downloads.selectedItem}"/>
  
  <transfer:DownloadGrid id="downloads"/>

</s:VGroup>