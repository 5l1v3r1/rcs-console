<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx"
          width="100%" height="26" gap="2" verticalAlign="middle">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.operations.OperationsSection;
      
      [Bindable]
      public var section:OperationsSection;
    ]]>
  </fx:Script>
  
  <mx:LinkButton click="section.stateManager.setState('allOperations')"
                 visible="{section.currentState != 'allOperations'}"
                 label="All Operations"
                 color="#333333"/>
  
  <s:Label visible="{section.stateManager.selectedOperation != null}" paddingTop="4" text="&gt;"/>
  <mx:LinkButton click="section.stateManager.setState('singleOperation')"
                 visible="{section.stateManager.selectedOperation != null}"
                 label="{section.stateManager.selectedOperation.name}"
                 color="#333333"/>
  
  <s:Label visible="{section.stateManager.selectedTarget != null}" paddingTop="4" text="&gt;"/>
  <mx:LinkButton click="section.stateManager.setState('singleTarget')"
                 visible="{section.stateManager.selectedTarget != null}"
                 label="{section.stateManager.selectedTarget.name}"
                 color="#333333"/>
  
  <s:Label visible="{section.stateManager.selectedAgent != null}" paddingTop="4" text="&gt;"/>
  <mx:LinkButton click="section.stateManager.setState('singleAgent')"
                 visible="{section.stateManager.selectedAgent != null}"
                 label="{section.stateManager.selectedAgent.name}"
                 color="#333333"/>
  
</s:HGroup>