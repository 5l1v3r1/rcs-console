<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx"
          height="26" gap="2" verticalAlign="middle">
  
  <fx:Script>
    <![CDATA[
      [Bindable]
      public var section:OperationsSection;
      
      protected function onTargetClick():void
      {
        section.currentState = 'singleTarget';
      }
      
      protected function onOperationClick():void
      {
        section.switchState('allOperations');
      }
      
    ]]>
  </fx:Script>
  
  <mx:LinkButton visible="{section.currentState != 'allOperations'}" label="All Operations" color="#333333" click="onOperationClick()"/>
  
  <s:Label visible="{section.selectedOperation != null}" paddingTop="4" text="&gt;"/>
  <mx:LinkButton visible="{section.selectedOperation != null}" label="{section.selectedOperation.name}"
                 color="#333333"/>
  
  <s:Label visible="{section.selectedTarget != null}" paddingTop="4" text="&gt;"/>
  <mx:LinkButton visible="{section.selectedTarget != null}" label="{section.selectedTarget.name}"
                 color="#333333" click="onTargetClick()"/>
  
  <s:Label visible="{section.selectedAgent != null}" paddingTop="4" text="&gt;"/>
  <mx:LinkButton visible="{section.selectedAgent != null}" label="{section.selectedAgent.name}" color="#333333"/>
  
</s:HGroup>