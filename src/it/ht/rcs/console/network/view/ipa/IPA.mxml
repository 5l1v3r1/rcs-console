<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx"
          xmlns:ipa="it.ht.rcs.console.network.view.ipa.*"
          left="5" right="5" top="0" bottom="5" addedToStage="onAddedToStage()">
  
  
  <fx:Script>
    <![CDATA[
      import mx.collections.ArrayCollection;
      import mx.rpc.events.ResultEvent;
      
      [Bindable]
      private var ipaList:ArrayCollection;
      
      private function onAddedToStage():void
      {
        console.currentDB.proxy.all(onResult);
      }
      
      private function onResult(event:ResultEvent):void
      {
        ipaList = event.result as ArrayCollection;
      }
    ]]>
  </fx:Script>
  
  
  <s:BorderContainer width="100%" height="100%" dropShadowVisible="true">
    <ipa:IPAList width="100%" height="101" borderVisible="false" dataProvider="{ipaList}"/>
  </s:BorderContainer>
  <s:HGroup>
    <s:Button width="30" height="20" label="N" skinClass="it.ht.rcs.console.skins.SortButton"
              toolTip="{resourceManager.getString('localized_main', 'DELETE')}"/>
    <s:Button width="30" height="20" label="E" skinClass="it.ht.rcs.console.skins.SortNameButton"
              toolTip="{resourceManager.getString('localized_main', 'DELETE')}"/>
  </s:HGroup>
  
  <s:DataGrid width="100%" height="100%">
    <s:columns>
      <s:ArrayList>
        <s:GridColumn dataField="dataField1" headerText="En"/>
        <s:GridColumn dataField="dataField2" headerText="Sy"/>
        <s:GridColumn dataField="dataField3" headerText="Pr"/>
        <s:GridColumn dataField="dataField1" headerText="Target"/>
        <s:GridColumn dataField="dataField2" headerText="Ident"/>
        <s:GridColumn dataField="dataField3" headerText="User Pattern"/>
        <s:GridColumn dataField="dataField3" headerText="Resource Pattern"/>
        <s:GridColumn dataField="dataField3" headerText="Action"/>
        <s:GridColumn dataField="dataField3" headerText="Parameters"/>
      </s:ArrayList>
    </s:columns>
  </s:DataGrid>
      
</s:VGroup>