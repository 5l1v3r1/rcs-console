<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                autoDrawBackground="true" doubleClick="edit()" doubleClickEnabled="true">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.events.EditEvent;
      
      private function edit():void
      {
        var evt:EditEvent = new EditEvent(EditEvent.PROXY, true);
        evt.object = data;
        dispatchEvent(evt);
      }
    ]]>
  </fx:Script>
  <s:SkinnableContainer width="70">
    <mx:Image top="5" width="70" height="60" source="img/items/user.png"/>
    <s:Label id="bottomLabel" top="72" width="70" paddingBottom="5" text="{data.name}"
             textAlign="center"/>
  </s:SkinnableContainer>
  
</s:ItemRenderer>