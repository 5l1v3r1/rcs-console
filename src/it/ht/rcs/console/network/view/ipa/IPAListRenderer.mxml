<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                autoDrawBackground="true" click="itemSelect()" doubleClick="edit()"
                doubleClickEnabled="true">
  
  <fx:Script>
    <![CDATA[
      import mx.events.ItemClickEvent;
      import mx.managers.PopUpManager;
      
      private function edit():void
      {
        PopUpManager.createPopUp(this, IPAForm, true);
      }
      
      protected function itemSelect():void
      {
        var e:ItemClickEvent = new ItemClickEvent(ItemClickEvent.ITEM_CLICK, true);
        e.item = data;
        e.index = itemIndex;
        dispatchEvent(e);
      }
      
    ]]>
  </fx:Script>
  <s:SkinnableContainer width="70">
    <mx:Image top="5" width="70" height="60" source="img/items/user.png"/>
    <s:Label id="bottomLabel" top="72" width="70" paddingBottom="5" text="{data.name}"
             textAlign="center"/>
  </s:SkinnableContainer>
  
</s:ItemRenderer>