<?xml version="1.0" encoding="utf-8"?>
<s:DataGrid xmlns:fx="http://ns.adobe.com/mxml/2009" 
            xmlns:s="library://ns.adobe.com/flex/spark" 
            xmlns:mx="library://ns.adobe.com/flex/mx" doubleClickEnabled="true" doubleClick="doubleClick(event)">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.network.model.ProxyRule;
      
      import mx.managers.PopUpManager;
      protected function doubleClick(event:MouseEvent):void
      {
        var popup:RuleForm = PopUpManager.createPopUp(this.parentDocument as DisplayObject, RuleForm, true) as RuleForm;
        popup.rule = selectedItem as ProxyRule;
        PopUpManager.centerPopUp(popup);
      }
    ]]>
  </fx:Script>
  
  
  <s:columns>
      <s:ArrayList>
        <s:GridColumn dataField="enabled" headerText="En" width="30" resizable="false">
          <s:itemRenderer>
            <fx:Component>
              <s:GridItemRenderer>
                <s:SkinnableContainer>
                  <s:CheckBox selected="@{data.enabled}" top="4" left="8"/>                                          
                </s:SkinnableContainer>
              </s:GridItemRenderer>
            </fx:Component>
          </s:itemRenderer>
        </s:GridColumn>
        <s:GridColumn dataField="disable_sync" headerText="Sy" width="30" resizable="false">
          <s:itemRenderer>
            <fx:Component>
              <s:GridItemRenderer>
                <s:SkinnableContainer>
                  <s:CheckBox selected="@{data.disable_sync}" top="4" left="9"/>                                          
                </s:SkinnableContainer>
              </s:GridItemRenderer>
            </fx:Component>
          </s:itemRenderer>
        </s:GridColumn>
        <s:GridColumn dataField="probability" headerText="Probability"/>
        <s:GridColumn dataField="target_id" headerText="Target"/>
        <s:GridColumn dataField="ident" headerText="Ident"/>
        <s:GridColumn dataField="ident_param" headerText="User Pattern"/>
        <s:GridColumn dataField="resource" headerText="Resource Pattern"/>
        <s:GridColumn dataField="action" headerText="Action"/>
        <s:GridColumn dataField="action_param" headerText="Parameters"/>
      </s:ArrayList>
    </s:columns>
  
</s:DataGrid>