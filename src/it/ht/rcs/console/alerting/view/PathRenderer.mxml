<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                    xmlns:s="library://ns.adobe.com/flex/spark"
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    clipAndEnableScrolling="true">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.search.controller.SearchManager;
      
      import mx.collections.ArrayCollection;
      
      override public function prepare(hasBeenRecycled:Boolean):void {
        if (data) {
          var path:ArrayCollection = data.path as ArrayCollection;
          
            lblData.text = "*";
            
            if (path.length > 0)
              lblData.text = SearchManager.instance.getItem(path.getItemAt(0).toString()).name;
            
            if (path.length > 1)
              lblData.text +=  " > " + SearchManager.instance.getItem(path.getItemAt(1).toString()).name;
                           
            if (path.length > 2)
              lblData.text +=  " > " + SearchManager.instance.getItem(path.getItemAt(2).toString()).name;
        }
      }
    ]]>
  </fx:Script>
  
  <s:Label id="lblData" left="7" top="9"/>
  
</s:GridItemRenderer>
