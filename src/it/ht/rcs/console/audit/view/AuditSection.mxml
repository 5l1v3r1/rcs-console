<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:audit="it.ht.rcs.console.audit.*"
         xmlns:view="it.ht.rcs.console.audit.view.*"
         addedToStage="onAddedToStage()" removedFromStage="onRemovedFromStage()" title="AUDIT">

  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.audit.controller.AuditManager;
      import it.ht.rcs.console.events.FilterEvent;
      import it.ht.rcs.console.task.view.TaskPopup;
      
      import mx.collections.ListCollectionView;
      import mx.core.FlexGlobals;
      import mx.managers.PopUpManager;
      import mx.resources.ResourceManager;
      
      [Bindable]
      private var _audit_view:ListCollectionView;
      
      private function onAddedToStage():void
      {
        AuditManager.instance.start();
        _audit_view = AuditManager.instance.getView();
      }
      
      private function onRemovedFromStage():void
      {
        AuditManager.instance.stop();
      }
      
      private function resetFilters(event:MouseEvent):void
      {
        FlexGlobals.topLevelApplication.dispatchEvent(new FilterEvent(FilterEvent.RESET_FILTER));
        AuditManager.instance.refresh();
      }
      
      protected function export():void
      {
        var popup:TaskPopup = new TaskPopup();
        PopUpManager.addPopUp(popup, FlexGlobals.topLevelApplication as DisplayObject, true);
        PopUpManager.centerPopUp(popup);
      }
    ]]>
  </fx:Script>

  <s:VGroup width="100%" height="100%" paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
    
    <s:HGroup>
      <s:Button height="20" label="Reset filters" click="resetFilters(event)"
                skinClass="it.ht.rcs.console.skins.DeleteButton"
                toolTip="{ResourceManager.getInstance().getString('localized_main', 'RESET_FILTERS')}"/>
      <s:Button height="20" label="Export" click="export()"
                skinClass="it.ht.rcs.console.skins.DownloadButton"
                toolTip="{ResourceManager.getInstance().getString('localized_main', 'EXPORT')}"/>
    </s:HGroup>
    
    <view:AuditTable id="grid" width="100%" height="100%" dataProvider="{AuditManager.instance._view}"/>
    
  </s:VGroup>
  
</s:Panel>