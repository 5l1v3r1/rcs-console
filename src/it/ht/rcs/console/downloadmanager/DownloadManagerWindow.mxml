<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark" 
               xmlns:mx="library://ns.adobe.com/flex/mx" 
               width="500" height="300" 
               close="closeMe()"
               title="{resourceManager.getString('localized_main', 'DOWNLOAD_MANAGER')}">
  <fx:Script>
    <![CDATA[
      import mx.managers.PopUpManager;
      
      private function closeMe():void
      {
        PopUpManager.removePopUp(this);  
      }
    ]]>
  </fx:Script>
  
  <s:List left="10" top="10" right="10" bottom="10" dataProvider="{DownloadManager.instance.tasks}" itemRenderer="it.ht.rcs.console.downloadmanager.TaskRenderer" />

</s:TitleWindow>
