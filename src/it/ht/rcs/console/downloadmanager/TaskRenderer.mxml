<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                autoDrawBackground="true">
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.model.Task;
      
      import mx.controls.Alert;
      import mx.events.CloseEvent;
      
      private function progressObject(current: int, total: int): Object
      {
        return {bytesLoaded: current, bytesTotal: total};
      }
      
      private function cancel():void
      {
        if(data.state == Task.STATE_CREATING || data.state == Task.STATE_DOWNLOADING)
          Alert.show(resourceManager.getString('localized_main', 'CONFIRM_TASK_DELETION'),
                     resourceManager.getString('localized_main', 'CONFIRM'),
                     Alert.OK | Alert.CANCEL, null, doCancel);
        else
          data.cancel();
      }
      
      private function doCancel(event:CloseEvent):void
      {
        if(event.detail == Alert.OK)
          data.cancel(true);
      }
      
    ]]>
  </fx:Script>
  
  <s:layout>
    <s:HorizontalLayout/>
  </s:layout>
  
  <s:SkinnableContainer width="100%" height="60" toolTip="{data.time}">
    <s:Label left="5" top="8" fontWeight="bold" text="{data.desc}"/>
    <mx:ProgressBar left="5" right="10" top="20" label="%3%%" labelPlacement="right" mode="polled"
                    name="creationProgress" source="{data.creation_percentage}"/>
    <mx:ProgressBar left="5" right="10" top="30" label="%3%%" labelPlacement="right" mode="polled"
                    name="downloadProgress" source="{data.download_percentage}"/>
    <s:Button right="5" top="5" width="15" height="15" click="cancel()"
              skinClass="spark.skins.spark.TitleWindowCloseButtonSkin"
              toolTip="{resourceManager.getString('localized_main', 'CANCEL')}"/>
  </s:SkinnableContainer>
</s:ItemRenderer>
