<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
                xmlns:s="library://ns.adobe.com/flex/spark" 
                xmlns:mx="library://ns.adobe.com/flex/mx" 
                autoDrawBackground="true">
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.utils.Size;
      
      private function progressObject(current: int, total: int): Object
      {
        return {bytesLoaded: current, bytesTotal: total};
      }
      
    ]]>
  </fx:Script>
  
  <s:layout>
    <s:HorizontalLayout/>
  </s:layout>
  
  <s:SkinnableContainer width="100%" height="60" toolTip="{data.time}">
    <s:HGroup top="7" left="5" right="50">
      <s:Label text="{data.desc}" fontWeight="bold"/>
      <s:Label text="percentage" textAlign="right" width="100%"/>
    </s:HGroup>
    <mx:ProgressBar name="creationProgress" mode="polled" source="{progressObject(data.current, data.total)}" label="%3%%" labelPlacement="right" top="20" left="5" right="10"/>
    <mx:ProgressBar name="downloadProgress" mode="polled" source="{data.download_percentage}" label="%3%%" labelPlacement="right" top="30" left="5" right="10"/>
    <s:Button skinClass="spark.skins.spark.TitleWindowCloseButtonSkin" right="5" top="5" width="15" height="15" click="data.cancel()" toolTip="{resourceManager.getString('localized_main', 'CANCEL')}" />
  </s:SkinnableContainer>
</s:ItemRenderer>
