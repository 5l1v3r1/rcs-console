<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                autoDrawBackground="true" doubleClick="edit()" doubleClickEnabled="true">
  
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.network.model.Proxy;
      
      import mx.managers.PopUpManager;
      
      private function edit():void
      {
        var popup:EditIPAForm = PopUpManager.createPopUp(this.parentDocument as DisplayObject, EditIPAForm, true) as EditIPAForm;
        popup.proxy = data as it.ht.rcs.console.network.model.Proxy;
        PopUpManager.centerPopUp(popup);
      }
      
    ]]>
  </fx:Script>
  
  <s:SkinnableContainer width="70">
    <mx:Image top="5" width="70" height="60" source="img/items/injection.png"/>
    <s:Label id="bottomLabel" top="72" width="70" paddingBottom="5" text="{data.name}" textAlign="center"/>
  </s:SkinnableContainer>
  
</s:ItemRenderer>