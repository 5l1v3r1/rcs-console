<?xml version="1.0" encoding="utf-8"?>
<s:DataGrid xmlns:fx="http://ns.adobe.com/mxml/2009" 
            xmlns:s="library://ns.adobe.com/flex/spark" 
            xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">

  <fx:Script>
    <![CDATA[
     
      import locale.R;
      
    ]]>
  </fx:Script>
  
  <s:columns>
    <s:ArrayList>
      <s:GridColumn headerText="{R.get('ENABLED_SHORT')}" resizable="false" width="30" dataField="enabled">
        <s:itemRenderer>
          <fx:Component>
            <s:GridItemRenderer>
              <s:SkinnableContainer>
                <s:CheckBox left="8" top="4" selected="@{data.enabled}"/>                                          
              </s:SkinnableContainer>
            </s:GridItemRenderer>
          </fx:Component>
        </s:itemRenderer>
      </s:GridColumn>
      <s:GridColumn headerText="What" dataField="what"/>
      <s:GridColumn headerText="When" dataField="when" width="200" />
      <s:GridColumn headerText="Name" dataField="name" />
      <s:GridColumn headerText="Last Run" dataField="lastrun" resizable="false" width="80" />
      <s:GridColumn headerText="Status" dataField="status" resizable="false" width="100" />

    </s:ArrayList>
  </s:columns>
</s:DataGrid>
