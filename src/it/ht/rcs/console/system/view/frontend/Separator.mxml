<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         width="100%" height="2">
  
  <s:Line xFrom="0" xTo="{width-1}" yFrom="0" yTo="0"> <!-- Remove '-1' for pure glitch awesomeness -->
    <s:stroke>
      <s:SolidColorStroke color="gray" weight="1"/>
    </s:stroke>
  </s:Line>
  
  <s:Line xFrom="0" xTo="{width-1}" yFrom="1" yTo="1"> <!-- Remove '-1' for pure glitch awesomeness -->
    <s:stroke>
      <s:SolidColorStroke color="white" weight="1"/>
    </s:stroke>
  </s:Line>
  
</s:Group>