<?xml version="1.0" encoding="utf-8"?>
<utils:TitleWindowSaveCancel xmlns:fx="http://ns.adobe.com/mxml/2009"
                             xmlns:s="library://ns.adobe.com/flex/spark"
                             xmlns:mx="library://ns.adobe.com/flex/mx"
                             xmlns:utils="it.ht.rcs.console.utils.*"
                             creationComplete="init()" save="onSave(event)"
                             title="{R.get('EDIT_ENTITY')}">

  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.entities.controller.EntityManager;
      import it.ht.rcs.console.entities.model.Entity;
      import it.ht.rcs.console.events.SaveEvent;
      import it.ht.rcs.console.operation.model.Operation;
      import it.ht.rcs.console.utils.AlertPopUp;
      
      import locale.R;
      
      import mx.events.CloseEvent;
      
      
      [Bindable] public var entity:Entity;
      
      private function init():void
      {
 
        entityName.setFocus();
        entityName.text=entity.name;
        desc.text=entity.desc;
      }
      
      private function onSave(event:SaveEvent):void
      {
        doSave();
        dispatchEvent(new Event("update"))
        close();  
      }
      
      
      private function doSave():void
      {
        entity.name = entityName.text;
        entity.desc = desc.text;
      }
      
    ]]>
  </fx:Script>
  
 
  
  <s:Form width="100%" defaultButton="{saveButton}">

    <s:FormItem label="{R.get('NAME')}">
      <s:TextInput id="entityName" width="250" text="{entity.name}" restrict="A-Za-z0-9'\-_ " maxChars="20"/>
    </s:FormItem>
    
    <s:FormItem label="{R.get('DESCRIPTION')}">
      <s:TextArea id="desc" width="250" heightInLines="3" text="{entity.desc}"/>
    </s:FormItem>
    
 
  </s:Form>
  
</utils:TitleWindowSaveCancel>