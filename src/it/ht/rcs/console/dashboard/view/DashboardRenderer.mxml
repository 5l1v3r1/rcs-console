<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                width="100%" height="150" autoDrawBackground="true" currentState="Operation" xmlns:view="it.ht.rcs.console.dashboard.view.*" xmlns:utils="it.ht.rcs.console.utils.*">
  
  <fx:Script>
    <![CDATA[
      
    ]]>
  </fx:Script>
  
  <s:states>
    <s:State name="Operation"/>
  </s:states>
  
  <utils:TitleWindowMinMaxClose left="5" right="5" top="5" bottom="5" skinClass="it.ht.rcs.console.skins.TitleWindowMinMaxCloseSkin" title="{data.name}" > 
    
    <s:HGroup width="100%" height="100%">
      <s:SkinnableContainer width="80" height="100%">
        <!-- item icon -->
        <s:Image top="10" horizontalCenter="0" source="@Embed('img/items/operation_black.png')"/>
        <s:Label top="80" horizontalCenter="0" text="{data.status != 'open' ? data.status : ''}"/>
      </s:SkinnableContainer>
      <s:SkinnableContainer width="100%" height="100%">
        <view:OperationDetails includeIn="Operation" />
      </s:SkinnableContainer>
    </s:HGroup>
   
  </utils:TitleWindowMinMaxClose>
  
</s:ItemRenderer>
