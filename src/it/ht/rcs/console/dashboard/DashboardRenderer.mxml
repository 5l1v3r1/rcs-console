<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:mx="library://ns.adobe.com/flex/mx"
                width="100%" height="150" autoDrawBackground="true" currentState="Operation">
  <s:states>
    <s:State name="Operation"/>
  </s:states>
  
  <s:TitleWindow left="5" right="5" top="5" bottom="5" skinClass="it.ht.rcs.console.skins.CompactTitleWindowSkin" title="{data.name}" > 
    <s:HGroup width="100%" height="100%">
      <s:SkinnableContainer width="80" height="100%">
        <!-- item icon -->
        <s:Image top="10" horizontalCenter="0" source="@Embed('img/items/operation_black.png')"/>
        <s:Label top="80" horizontalCenter="0" text="status"/>

        
      </s:SkinnableContainer>
      <s:SkinnableContainer width="90%" height="100%">
        <!-- infos -->
        <s:Label left="500" top="10" fontWeight="bold" text="Device"/>
        <s:Label left="200" top="10" fontWeight="bold" text="User"/>
        <s:Label x="358" y="10" fontWeight="bold" text="Source"/>
        <s:Label left="5" top="10" fontWeight="bold" text="Sync time"/>
        <!-- icons placeholder -->
        <s:BorderContainer left="5" right="5" top="30" bottom="5" minHeight="0"
                           backgroundColor="#EAEAEA" cornerRadius="5">
          <s:Image left="5" top="5" source="@Embed('img/evidence/square.png')"/>
          <s:Image left="65" top="5" source="@Embed('img/evidence/square.png')"/>
        </s:BorderContainer>
        <s:Label left="70" top="10" text="2011-06-02 15:30:00"/>
      </s:SkinnableContainer>
    </s:HGroup>
  </s:TitleWindow>
  
</s:ItemRenderer>
