<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
                xmlns:s="library://ns.adobe.com/flex/spark" 
                xmlns:mx="library://ns.adobe.com/flex/mx" 
                autoDrawBackground="true"
                doubleClickEnabled="true" 
                doubleClick="edit()">
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.events.EditEvent;
      
      import spark.components.supportClasses.ListBase;
      
      private function edit():void
      {
        /* visualize the textedit and give it the focus */
        nameedit.text = data.name;
        nameedit.visible = true;
        //nameedit.selectRange(nameedit.text.length, nameedit.text.length+1);
        nameedit.setFocus();
      }
      
      private function cancel():void
      {
        /* back to the label visualization */
        nameedit.visible = false; 
      }
      
      private function endEdit():void
      {
        /* update the name */
        data.name = nameedit.text;
  
        /* back to the label visualization */
        nameedit.visible = false; 
      }
      
    ]]>
  </fx:Script>
  <s:SkinnableContainer x="0" y="0" width="70" height="80" >
    <mx:Image source="img/items/group.png" left="0" top="5" width="70" height="60"/>
    <s:Label id="namelabel" text="{data.name}" bottom="0" horizontalCenter="0"/>
    <s:TextInput id="nameedit" text="{data.name}" bottom="0" horizontalCenter="0" width="70" visible="false" focusOut="cancel()" enter="endEdit()" borderVisible="false"/>
  </s:SkinnableContainer>
  
</s:ItemRenderer>
