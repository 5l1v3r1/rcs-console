<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx"
         title="ACCOUNTING" width="100%" height="100%">
  <fx:Script>
    <![CDATA[
      import mx.collections.ArrayCollection;

      [Bindable]
      private var connected_users:ArrayCollection = new ArrayCollection([{user:"alor", address:"1.1.2.3", logon:new Date()},
                                                                         {user:"demo", address:"demo", logon:new Date()},
                                                                         {user:"daniel", address:"5.6.7.8", logon:new Date()}]);
        
      [Bindable]
      private var users:ArrayCollection = new ArrayCollection(['alor', 'demo', 'daniele', 'naga', 'rev', 'kiodo', 'zeno', 'que', 'fabio', 'br1']);
      
    ]]>
  </fx:Script>
  
  <fx:Metadata>
    [ResourceBundle("localized_main")] 
  </fx:Metadata>
  
  <fx:Declarations>
    <!-- Place non-visual elements (e.g., services, value objects) here -->
  </fx:Declarations>

  <mx:TabNavigator left="5" top="5" right="5" bottom="5" backgroundColor="#EAEAEA">
    
    <s:NavigatorContent label="{resourceManager.getString('localized_main', 'USERS')}" width="100%" height="100%">
      <s:HGroup id="horizontalgroup" bottom="10" top="0" right="10" left="10">
        
        <!-- USERS -->
        <s:SkinnableContainer id="leftcontainer" width="100%" height="100%">
          <s:Label text="{resourceManager.getString('localized_main', 'USERS')}" fontFamily="Verdana" fontSize="16" horizontalCenter="0" top="5" paddingRight="0"/>
          <s:BorderContainer id="userlistshadow" borderVisible="true" dropShadowVisible="true" right="0" left="0" top="35" bottom="0">
            <s:List id="userslist" left="5" bottom="20" right="5" top="5" borderVisible="false" dataProvider="{users}" itemRenderer="it.ht.rcs.console.accounting.UserRenderer">
              <s:layout>
                <s:TileLayout horizontalGap="10" verticalGap="10" />
              </s:layout>
            </s:List>
            <s:Button label="+" width="30" height="20" right="1" bottom="1" fontWeight="bold"/>
            <s:Button label="-" width="30" height="20" right="31" bottom="1" fontWeight="bold"/>
          </s:BorderContainer>
        </s:SkinnableContainer>
        
        <!-- CONNECTED USERS -->
        <s:SkinnableContainer id="rigthcontainer" width="100%" height="100%">
          <s:Label text="{resourceManager.getString('localized_main', 'USERS_CONNECTED')}" fontFamily="Verdana" fontSize="16" horizontalCenter="0" top="5"/>
          <s:BorderContainer id="activeuserlistshadow" borderVisible="false" dropShadowVisible="true" right="0" left="0" top="35" bottom="0">
            <mx:DataGrid id="activeusersgrid" left="0" right="0" top="0" bottom="0" editable="false" dataProvider="{connected_users}">
              <mx:columns>
                <mx:DataGridColumn headerText="User" dataField="user"/>
                <mx:DataGridColumn headerText="Address" dataField="address"/>
                <mx:DataGridColumn headerText="Logon Time" dataField="logon"/>
                <mx:DataGridColumn headerText="" sortable="false" resizable="false" width="35">
                  <mx:itemRenderer>
                    <fx:Component>
                      <s:MXItemRenderer>
                        <s:Button skinClass="spark.skins.spark.TitleWindowCloseButtonSkin" height="15" width="15" toolTip="Disconnect this user!" horizontalCenter="0" click="{data.disconnect()}" />                          
                      </s:MXItemRenderer>
                    </fx:Component>
                  </mx:itemRenderer>
                </mx:DataGridColumn>
              </mx:columns>
            </mx:DataGrid>
          </s:BorderContainer>
        </s:SkinnableContainer>
        
      </s:HGroup>
    </s:NavigatorContent>
    
    <s:NavigatorContent label="{resourceManager.getString('localized_main', 'GROUPS')}" width="100%" height="100%">
    </s:NavigatorContent>
  
  </mx:TabNavigator>
</s:Panel>
