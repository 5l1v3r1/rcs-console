<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         left="2" right="2" top="2" width="100%">
  
  <fx:Script>
    <![CDATA[
      import mx.collections.IList;
      
      [Bindable]
      public var subSections:IList;
    ]]>
  </fx:Script>
  
  <s:Rect width="100%" height="100%">
    <s:fill><s:SolidColor color="#dddddd"/></s:fill>
  </s:Rect>
  
  <s:Group width="100%" height="100%">
    
    <s:layout>
      <s:HorizontalLayout gap="0" horizontalAlign="left" paddingBottom="5" paddingLeft="8"
                          paddingRight="8" paddingTop="5" verticalAlign="middle"/>
    </s:layout>
    
    <s:ButtonBar dataProvider="{subSections}" requireSelection="true"
                 skinClass="it.ht.rcs.console.main.skins.RCSMenuSubSectionSkin"/>
    
    <s:Spacer width="100%"/>
    
    <s:TextInput skinClass="it.ht.rcs.console.main.skins.RCSSearchFieldSkin"/>
    
  </s:Group>
  
</s:Group>