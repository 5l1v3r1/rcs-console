<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx"
         width="100%" height="100%">
  <fx:Script>
    <![CDATA[
      import it.ht.rcs.console.model.LicenseManager;
    ]]>
  </fx:Script>
  
  <s:VGroup width="100%" height="100%" left="5" right="5" top="10" bottom="5">
    <s:HGroup width="100%">
      <s:Label text="{resourceManager.getString('localized_main', 'LICENSE_START_DATE')}" />
      <s:Label text="{LicenseManager.instance.start_date}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>
    <s:HGroup width="100%">
      <s:Label text="{resourceManager.getString('localized_main', 'LICENSE_END_DATE')}" />
      <s:Label text="{LicenseManager.instance.end_date}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>
    <s:HGroup width="100%">
      <s:Label text="{resourceManager.getString('localized_main', 'LICENSE_SERIAL')}" />
      <s:Label text="{LicenseManager.instance.serial}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>
    
    <s:Spacer height="10"/>
    
    <s:HGroup width="100%">
      <s:Label text="{resourceManager.getString('localized_main', 'LICENSE_USERS')}" />
      <s:Label text="{LicenseManager.instance.users.curr} / {LicenseManager.instance.users.max}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>    
    
    <s:Spacer height="10"/>
    
    <s:HGroup width="100%">
      <s:Label text="Backdoors" />
      <s:Label text="{LicenseManager.instance.backdoors.curr} / {LicenseManager.instance.backdoors.max}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>    
      <s:HGroup width="100%">
        <s:Label text="Desktop" paddingLeft="10" />
        <s:Label text="{LicenseManager.instance.bck_desktop.curr} / {LicenseManager.instance.bck_desktop.max}" width="100%" styleName="MonitorAccordion"/>
      </s:HGroup>        
        <s:HGroup width="100%">
          <s:Label text="Mac OS" paddingLeft="20" />
          <s:Label text="{LicenseManager.instance.bck_macos.curr} / {LicenseManager.instance.bck_macos.max}" width="100%" styleName="MonitorAccordion"/>
        </s:HGroup>  
        <s:HGroup width="100%">
          <s:Label text="Windows" paddingLeft="20" />
          <s:Label text="{LicenseManager.instance.bck_windows.curr} / {LicenseManager.instance.bck_windows.max}" width="100%" styleName="MonitorAccordion"/>
        </s:HGroup>    
      <s:HGroup width="100%">
        <s:Label text="Mobile" paddingLeft="10" />
        <s:Label text="{LicenseManager.instance.bck_mobile.curr} / {LicenseManager.instance.bck_mobile.max}" width="100%" styleName="MonitorAccordion"/>
      </s:HGroup>        
        <s:HGroup width="100%">
          <s:Label text="Android" paddingLeft="20" />
          <s:Label text="{LicenseManager.instance.bck_android.curr} / {LicenseManager.instance.bck_android.max}" width="100%" styleName="MonitorAccordion"/>
        </s:HGroup>    
        <s:HGroup width="100%">
          <s:Label text="Blackberry" paddingLeft="20" />
          <s:Label text="{LicenseManager.instance.bck_blackberry.curr} / {LicenseManager.instance.bck_blackberry.max}" width="100%" styleName="MonitorAccordion"/>
        </s:HGroup>  
        <s:HGroup width="100%">
          <s:Label text="iPhone" paddingLeft="20" />
          <s:Label text="{LicenseManager.instance.bck_iphone.curr} / {LicenseManager.instance.bck_iphone.max}" width="100%" styleName="MonitorAccordion"/>
        </s:HGroup>  
        <s:HGroup width="100%">
          <s:Label text="Symbian" paddingLeft="20" />
          <s:Label text="{LicenseManager.instance.bck_symbian.curr} / {LicenseManager.instance.bck_symbian.max}" width="100%" styleName="MonitorAccordion"/>
        </s:HGroup>  
        <s:HGroup width="100%">
          <s:Label text="WinMo" paddingLeft="20" />
          <s:Label text="{LicenseManager.instance.bck_winmo.curr} / {LicenseManager.instance.bck_winmo.max}" width="100%" styleName="MonitorAccordion"/>
        </s:HGroup>  
    
    <s:Spacer height="10"/>
    
    <s:HGroup width="100%">
      <s:Label text="Collectors" />
    </s:HGroup>    
      <s:HGroup width="100%">
        <s:Label text="Collection Nodes" paddingLeft="10" />
        <s:Label text="{LicenseManager.instance.coll_nodes.curr} / {LicenseManager.instance.coll_nodes.max}" width="100%" styleName="MonitorAccordion"/>
      </s:HGroup>   
      <s:HGroup width="100%">
        <s:Label text="Anonymizers" paddingLeft="10" />
        <s:Label text="{LicenseManager.instance.anonymizers.curr} / {LicenseManager.instance.anonymizers.max}" width="100%" styleName="MonitorAccordion"/>
      </s:HGroup>   
    
    <s:Spacer height="10"/>
    
    <s:HGroup width="100%">
      <s:Label text="Alerting" />
      <s:Label text="{(LicenseManager.instance.alerting) ? 'on' : 'off'}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>    
    <s:HGroup width="100%">
      <s:Label text="Correlation" />
      <s:Label text="{(LicenseManager.instance.correlation) ? 'on' : 'off'}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>   
    
    <s:Spacer height="10"/>
    
    <s:HGroup width="100%">
      <s:Label text="{resourceManager.getString('localized_main', 'LICENSE_VECTORS')}" />
    </s:HGroup>  
    <s:HGroup width="100%">
      <s:Label text="Injection Proxy" paddingLeft="10"/>
      <s:Label text="{LicenseManager.instance.ipa.curr} / {LicenseManager.instance.ipa.max}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup>    
    <s:HGroup width="100%">
      <s:Label text="Remote Mobile Installation" paddingLeft="10"/>
      <s:Label text="{(LicenseManager.instance.rmi) ? 'on' : 'off'}" width="100%" styleName="MonitorAccordion"/>
    </s:HGroup> 
  </s:VGroup>
</s:Group>
